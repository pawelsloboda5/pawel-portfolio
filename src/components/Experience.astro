---
// Experience Section - Work history
import ExperienceTabs from './ExperienceTabs';
import ScrollReveal from './ScrollReveal';
---

<section id="experience" class="scroll-mt-20 experience-section">
  <div class="w-full max-w-4xl mx-auto">
    <!-- Section Header -->
    <ScrollReveal client:load variant="slide-up" duration={500} threshold={0.2} distance={20}>
      <div class="mb-8 md:mb-12 flex items-center gap-6">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-[var(--color-text-primary)] whitespace-nowrap">
          Where I've Worked
        </h2>
        <!-- Unique decorative element -->
        <div class="flex items-center gap-4 flex-1 min-w-0">
          <div class="h-1 w-full max-w-[200px] md:max-w-[300px] bg-gradient-to-r from-[var(--color-accent-primary)] to-transparent rounded-full"></div>
          <div class="h-1 w-16 md:w-24 bg-gradient-to-r from-[var(--color-accent-primary)] to-transparent rounded-full opacity-60"></div>
          <div class="h-1 w-8 md:w-12 bg-gradient-to-r from-[var(--color-accent-primary)] to-transparent rounded-full opacity-30"></div>
        </div>
      </div>
    </ScrollReveal>

    <!-- Experience Tabs Component (React) -->
    <ScrollReveal client:load variant="slide-up" duration={600} threshold={0.15} delay={100} distance={25}>
      <div class="experience-tabs-wrapper">
        <ExperienceTabs client:load />
      </div>
    </ScrollReveal>
  </div>
</section>

<style>
  /* Ensure proper containment and spacing */
  .experience-section {
    position: relative;
    overflow: visible;
  }

  .experience-tabs-wrapper {
    position: relative;
    width: 100%;
    overflow: visible;
  }

  /* Mobile-specific spacing to prevent overlap with next section */
  @media (max-width: 768px) {
    .experience-section {
      padding-bottom: 6rem !important;
      margin-bottom: 8rem;
    }
  }

  @media (max-width: 480px) {
    .experience-section {
      padding-bottom: 6rem !important;
      margin-bottom: 10rem;
    }
  }
</style>
