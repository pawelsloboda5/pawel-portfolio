---
// Experience Section - Work history
import ExperienceTabs from './ExperienceTabs';
---

<section id="experience" class="py-24 scroll-mt-20">
  <div class="w-full max-w-4xl mx-auto">
    <!-- Section Header -->
    <h2 class="flex items-center text-3xl md:text-4xl font-bold text-[var(--color-text-primary)] mb-12">
      <span class="text-[var(--color-accent-primary)] font-mono text-2xl mr-3">02.</span>
      Where I've Worked
      <span class="ml-6 h-px flex-1 bg-[var(--color-border)]"></span>
    </h2>

    <!-- Experience Tabs Component (React) -->
    <ExperienceTabs client:load />
  </div>
</section>
