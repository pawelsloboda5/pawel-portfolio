---
// Featured Projects Section - Large showcase projects
import ScrollReveal from './ScrollReveal';
---

<ul class="list-none p-0 m-0">
  <!-- Project 1 - Odd (Image Left, Content Right) -->
  <ScrollReveal client:load variant="slide-up" duration={600} threshold={0.1} delay={100} distance={30}>
    <li class="featured-project featured-project-odd">
      <!-- Project Content -->
      <div class="project-content">
        <p class="project-overline">Featured Project</p>
        <h3 class="project-title">
          <a href="https://project1.com" target="_blank" rel="noopener noreferrer">
            Halcyon Theme
          </a>
        </h3>
        
        <div class="project-description">
          <p>
            A minimal, dark blue theme for VS Code, Sublime Text, Atom, iTerm, and more. Available on 
            <a href="https://marketplace.visualstudio.com/" target="_blank" rel="noopener noreferrer">Visual Studio Marketplace</a>, 
            <a href="https://packagecontrol.io/" target="_blank" rel="noopener noreferrer">Package Control</a>, 
            <a href="https://atom.io/themes" target="_blank" rel="noopener noreferrer">Atom Package Manager</a>, and 
            <a href="https://www.npmjs.com/" target="_blank" rel="noopener noreferrer">npm</a>.
          </p>
        </div>

        <ul class="project-tech-list">
          <li>VS Code</li>
          <li>Sublime Text</li>
          <li>Atom</li>
          <li>iTerm2</li>
          <li>Hyper</li>
        </ul>

        <div class="project-links">
          <a href="https://github.com" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
